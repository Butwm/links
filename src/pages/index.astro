	<main class="mx-auto w-max mb-12 ">
		<header class="mt-12 flex flex-col items-center">
			<Picture />
			<Username />
		</header>
		<section class="mt-6 flex w-72 md:w-80 flex-col gap-y-6">
			<Item />
		</section>
	</main>
